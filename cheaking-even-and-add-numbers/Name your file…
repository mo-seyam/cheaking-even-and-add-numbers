int main()
{
	int num;
	char sel;
	do {
		cout << "Enter integer number to be cheked:  \n";
		cin >> num;
		if (num % 2 == 0) {
			cout << "the number is even.\n";
		}
		else {
			cout << "the number is add.\n";
		}

		cout << "enter Y or y to check another number :   \n";
		cin>> sel;
		
	}
	while (sel == 'y' || sel == 'Y');
	cout << "end the program .\n";

    return 0;
}

